{% block sonata_media_type_widget %}
	<div class="clearfix">
		{% if value is not empty and value.providerReference %}
			<div class="pull-left" style="margin-right: 5px">
				{% thumbnail value, 'admin' with {'class': 'img-thumbnail media-object'} %}
			</div>

			{% if sonata_admin_enabled is defined and sonata_admin_enabled %}
				<a href="{{ url('admin_serius_media_media_edit', {id: value.id}) }}"><strong>{{ value.name }}</strong></a>
			{% else %}
				<strong>{{ value.name }}</strong>
			{% endif %}
			<br />
			<span class="label label-default">{{ value.providerName|trans({}, 'SonataMediaBundle') }}</span>
		{% else %}
			<div class="pull-left" style="margin-right: 5px">
				<img src="{{ asset('bundles/sonatamedia/grey.png') }}" class="img-polaroid media-object" style="width: 85px; height: 85px"/>
			</div>
			<strong>{{ 'no_linked_media'|trans({}, 'SonataMediaBundle') }}</strong> <br />
			<span class="label label-default">{{ form.vars['provider']|trans({}, 'SonataMediaBundle') }}</span>
		{% endif %}
	</div>

	<div class="spacer-lg">
		{{ block('form_widget') }}
	</div>
{% endblock sonata_media_type_widget %}
